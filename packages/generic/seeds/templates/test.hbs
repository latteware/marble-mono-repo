import { expect } from 'chai'
import path from 'path'

import { RecordTape } from '@marble-seeds/record-tape'

import { {{handler}}, type TastArgv } from '{{path}}'

{{handler}}.setMode('replay')

const tapePath = path.resolve(__dirname, '../fixtures/{{taskName}}')
const tape = new RecordTape({
  path: tapePath
})

tape.loadSync()

// eslint-disable-next-line @typescript-eslint/no-unsafe-argument
{{handler}}.setBoundariesData(tape.compileCache())

describe.only('{{taskName}} tape', function () {
  tape.getLog().forEach((logRecord, i) => {
    it(`Tape #${i}: ${JSON.stringify(logRecord.input)}`, async function () {
      // eslint-disable-next-line @typescript-eslint/no-unsafe-argument
      const res = await {{handler}}.run(logRecord.input as unknown as TastArgv)

      expect(res).to.be.deep.equal(logRecord.output)
    })
  })
})
